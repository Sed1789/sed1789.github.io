            for (const symptom of symptoms) {
                for (const otherSymptom in combinations[symptom]) {
                    if (symptoms.includes(otherSymptom)) {
                        return combinations[symptom][otherSymptom];
                    }
                }
            }
            return "Попробуйте заниматься спортом и уделяйте время хобби.";
        }

        function closeModal() {
            document.getElementById('myModal').style.display = "none"; // Закрыть модальное окно
            selectedSymptoms = []; // Сбросить выбранные симптомы
            const symptoms = document.querySelectorAll('.symptom');
            symptoms.forEach(symptom => symptom.classList.remove('selected')); // Удалить выделение
            document.getElementById('recommendation-text').innerText = 'Выберите два симптома, чтобы получить рекомендации.'; // Обновить текст рекомендации
        }

        // Закрытие модального окна при клике вне его
        window.onclick = function(event) {
            const modal = document.getElementById('myModal');
            if (event.target === modal) {
                closeModal();
            }
        }
    </script>
